    <Color x:Key="Color.Default.Background">#FFFFFF</Color>
    <Color x:Key="Color.Default.Background.LighGrey">#F3F3F4</Color>
    <Color x:Key="Color.Default.Background.Blue">#2FB4E9</Color>
    <Color x:Key="Color.Default.Background.LightBlue">#ACE1F6</Color>
    <Color x:Key="Color.Default.Foreground">#000000</Color>
    <Color x:Key="Color.Default.Foreground.Blue">#2FB4E9</Color>
    <Color x:Key="Color.Default.Foreground.DarkGrey">#646466</Color>
    <Color x:Key="Color.Default.Foreground.White">#FFFFFF</Color>

    <SolidColorBrush x:Key="Brush.Default.Background" Color="{StaticResource Color.Default.Background}" />
    <SolidColorBrush x:Key="Brush.Default.Background.LightGrey" Color="{StaticResource Color.Default.Background.LighGrey}" />
    <SolidColorBrush x:Key="Brush.Default.Background.Blue" Color="{StaticResource Color.Default.Background.Blue}" />
    <SolidColorBrush x:Key="Brush.Default.Background.LightBlue" Color="{StaticResource Color.Default.Background.LightBlue}" />
    <SolidColorBrush x:Key="Brush.Default.Foreground" Color="{StaticResource Color.Default.Foreground}" />
    <SolidColorBrush x:Key="Brush.Default.Foreground.Blue" Color="{StaticResource Color.Default.Foreground.Blue}" />
    <SolidColorBrush x:Key="Brush.Default.Foreground.DarkGrey" Color="{StaticResource Color.Default.Foreground.DarkGrey}" />
    <SolidColorBrush x:Key="Brush.Default.Foreground.White" Color="{StaticResource Color.Default.Foreground.White}" />
    
    <!--#endregion-->

